@model Enable2faViewModel

@{
    ViewData["Title"] = "Enable Two-Factor Authentication";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Enable Two-Factor Authentication (2FA)</h2>
            <hr />
            
            <div class="alert alert-info">
                <strong>Set up authenticator app:</strong>
                <ol>
                    <li>Download an authenticator app like Google Authenticator or Microsoft Authenticator</li>
                    <li>Scan the QR code below or manually enter the key</li>
                    <li>Enter the 6-digit code from your app to verify</li>
                </ol>
            </div>

            <div class="text-center mb-4">
                <div id="qrCode"></div>
                <p class="mt-3">
                    <strong>Manual Entry Key:</strong><br />
                    <code>@Model.SharedKey</code>
                </p>
            </div>

            <form asp-action="Enable2fa" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SharedKey" />
                <input type="hidden" asp-for="QrCodeUrl" />

                <div class="form-group mb-3">
                    <label asp-for="Code" class="form-label"></label>
                    <input asp-for="Code" class="form-control text-center" maxlength="6" pattern="[0-9]*" inputmode="numeric" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Verify and Enable 2FA</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <script>
        new QRCode(document.getElementById("qrCode"), {
            text: "@Html.Raw(Model.QrCodeUrl)",
            width: 200,
            height: 200
        });
    </script>
}
